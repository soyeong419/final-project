<style>
  .profile-container {
    display: flex;
    align-items: center;
    margin-right: 20px; 
  }

  .nav-profile-img {
    width: 40px;
    height: 40px;
    border-radius: 50%; 
    object-fit: cover; 
    margin-right: 10px;
    border: 2px solid #ddd; 
  }

  .profile-name {
    font-weight: 600;
    font-size: 18px;
  }

  ul.navbar-nav.me-auto {
    display: flex;
    justify-content: center;
    width: 100%;
    gap: 20px;
    margin-right: 50px;
  }

  a.nav-link text-danger{
    margin-left: auto;
    margin-right: 20px;
  }

  ul.navbar-nav.ms-4 {
    margin-left: auto; 
  }

  ul.navbar-nav.ms-4 .nav-link {
    white-space: nowrap; 
    padding-right: 20px; 
  }

  nav.navbar {
    min-height: 50px;
  }

  .navbar-nav .nav-link {
    font-size: 20px;
    padding-top: 20px;
    padding-bottom: 20px;
  }
</style>


<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <!-- 네비게이션 바 메뉴 토글 버튼 -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <!-- 네비게이션 메뉴 항목들 -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- 로그인한 사용자의 프로필 이미지와 이름 출력 -->
          <% if (typeof user !== 'undefined' && user) { %>
            <div class="profile-container"> <!-- 사용자 프로필 이미지 -->
              <img src="/profile/<%= user.userid %>.jpg" 
                  alt="프로필" 
                  class="nav-profile-img" 
                  onerror="this.onerror=null;this.src='/profile/default.jpg';" />
                  <!-- 이미지가 없으면 기본 이미지로 대체 -->
                  <!-- 사용자 이름 또는 ID 출력 -->
                  <span class="profile-name"><%= user.name || user.userid %></span> 
            </div>
          <% } %>
          <!-- 네비게이션 메뉴 항목들 -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"> <!-- 홈으로 링크 -->
              <a class="nav-link" aria-current="page" href="/index">홈으로</a>
            </li>
            <li class="nav-item"> <!-- 추가하기 페이지 링크 -->
              <a class="nav-link" href="/enter">추가하기</a>
            </li>
            <li class="nav-item"> <!-- 목록보기 페이지 링크 -->
              <a class="nav-link" href="/list">목록보기</a>
            </li>
            <li class="nav-item"> <!-- 친구 목록 페이지 링크 -->
              <a class="nav-link" href="/friend/list">친구 목록</a>
            </li>
          </ul>

          <!-- 오른쪽 끝 로그아웃 링크 (로그인된 경우에만 표시) -->
          <% if (typeof user !== 'undefined' && user) { %>
          <ul class="navbar-nav ms-4 mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-danger" href="/logout">로그아웃</a>
            </li>
          </ul>
          <% } %>
        </div>
    </div>
</nav>